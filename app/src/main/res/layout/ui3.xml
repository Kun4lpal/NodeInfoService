<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/appName"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:text="AppName" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/identitybox"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:checked="false"></CheckBox>

            <TextView
                android:id="@+id/identity"
                android:textAllCaps="false"
                android:layout_width="257dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="Identity"
                android:layout_weight="113.26" />
            <Button
                android:id="@+id/identitybutton"
                android:layout_width="61dp"
                android:layout_height="44dp"
                android:background="@drawable/right"
                android:layout_weight="108.33" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/locationbox"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:checked="false"></CheckBox>

            <TextView
                android:id="@+id/location"
                android:textAllCaps="false"
                android:layout_width="257dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="Location"
                android:layout_weight="113.26" />

            <Button
                android:id="@+id/locationbutton"
                android:layout_width="61dp"
                android:layout_height="44dp"
                android:background="@drawable/right"
                android:layout_weight="108.33" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/pmfbox"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:checked="false"></CheckBox>

            <TextView
                android:id="@+id/pmf"
                android:textAllCaps="false"
                android:layout_width="257dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="Photos/Media/Files"
                android:layout_weight="113.26" />

            <Button
                android:id="@+id/pmfbutton"
                android:layout_width="61dp"
                android:layout_height="44dp"
                android:background="@drawable/right"
                android:layout_weight="108.33" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mbox"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:checked="false"></CheckBox>

            <TextView
                android:id="@+id/microphone"
                android:textAllCaps="false"
                android:layout_width="257dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="Microphone"
                android:layout_weight="113.26" />

            <Button
                android:id="@+id/mbutton"
                android:layout_width="61dp"
                android:layout_height="44dp"
                android:background="@drawable/right"
                android:layout_weight="108.33" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />



        <View
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginBottom="10sp"
            android:id="@+id/imageView4" />




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />


        <LinearLayout
            android:id="@+id/task1"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:textSize="13dp"
            android:background="#FFFAF0"
            android:layout_centerInParent="true"
            android:layout_height="103dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/imageView2"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:background="@drawable/secondaryuse_yellow1"
                android:layout_weight="0.69" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/imageView3"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:background="@drawable/surveillence_red"
                android:layout_weight="0.15" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/imageView1"
                android:layout_width="119dp"
                android:layout_height="92dp"
                android:background="@drawable/intrusion_red" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="190sp"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/install"
                android:text="Install"
                android:layout_width="190sp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

    </LinearLayout>
</LinearLayout>